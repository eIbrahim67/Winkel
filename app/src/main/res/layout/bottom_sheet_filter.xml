<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    style="@style/background"
    android:paddingBottom="40dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:layout_marginTop="10dp">

        <TextView
            style="@style/TextColor_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:text="Reset"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,InefficientWeight" />

        <ImageView
            android:id="@+id/back_filter_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            style="@style/back_arrow_background_btn"
            android:padding="5dp"
            android:clickable="true"
            android:layout_centerVertical="true"
            android:focusable="true"
            android:layout_marginStart="20dp" />

        <TextView
            style="@style/TextColor_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/fugaz_one_regular"
            android:text="Filter"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,InefficientWeight" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:background="@color/gray_v1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Category"
        android:gravity="center_vertical"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/works_ans_v1"
        style="@style/TextColor_v1"
        android:layout_marginStart="20dp"
        tools:ignore="HardcodedText,InefficientWeight" />

    <LinearLayout
        android:id="@+id/btn_all"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_marginTop="5dp"
        style="@style/ripple_gray"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            style="@style/filter_none_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="All"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/works_ans_v1"
            style="@style/TextColor_v1"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText,InefficientWeight"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/RadBtnAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                style="@style/radio_button_background"
                android:layout_marginEnd="20dp"
                android:checked="true"/>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_men"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        style="@style/ripple_gray"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            style="@style/men_icon"
            android:layout_gravity="center_vertical"
            android:focusable="true"
            android:layout_marginStart="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Men"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/works_ans_v1"
            style="@style/TextColor_v1"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText,InefficientWeight"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/RadBtnMen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                style="@style/radio_button_background"
                android:layout_marginEnd="20dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_women"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        style="@style/ripple_gray"
        android:orientation="horizontal"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            style="@style/women_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Women"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/works_ans_v1"
            style="@style/TextColor_v1"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText,InefficientWeight"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/RadBtnWomen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                style="@style/radio_button_background"
                android:layout_marginEnd="20dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/btn_kids"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        style="@style/ripple_gray"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            style="@style/kids_icon"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="40dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Kids"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/works_ans_v1"
            style="@style/TextColor_v1"
            android:layout_marginStart="10dp"
            tools:ignore="HardcodedText,InefficientWeight"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/RadBtnKid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                style="@style/radio_button_background"
                android:layout_marginEnd="20dp" />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/gray_v1"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="Price"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="@font/works_ans_v1"
        style="@style/TextColor_v1"
        android:layout_marginStart="20dp"
        tools:ignore="HardcodedText,InefficientWeight" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="From"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:fontFamily="@font/works_ans_v1"
            style="@style/TextColor_v1"
            tools:ignore="HardcodedText,InefficientWeight"
            android:layout_marginEnd="10dp"/>

        <EditText
            android:id="@+id/fPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:inputType="numberDecimal"
            android:text="0"
            android:textSize="20sp"
            style="@style/rounded_outline_solid_white_black"
            tools:ignore="HardcodedText,RtlCompat"
            android:textAlignment="center"
            android:layout_weight="1"
            android:autofillHints="" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="to"
            android:gravity="center_vertical"
            android:textSize="18sp"
            android:fontFamily="@font/works_ans_v1"
            style="@style/TextColor_v1"
            tools:ignore="HardcodedText,InefficientWeight"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp" />

        <EditText
            android:id="@+id/tPrice"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:text="1000"
            style="@style/rounded_outline_solid_white_black"
            android:inputType="number"
            android:textSize="20sp"
            android:layout_weight="1"
            tools:ignore="HardcodedText,RtlCompat"
            android:textAlignment="center"
            android:autofillHints="" />

    </LinearLayout>

    <Button
        android:id="@+id/btnFilter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        style="@style/checkout_background_btn"
        android:text="Filter"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:layout_marginTop="40dp"
        tools:ignore="HardcodedText"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"/>

</LinearLayout>