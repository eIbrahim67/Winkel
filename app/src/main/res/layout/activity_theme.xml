<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".theme.ThemeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                style="@style/main_back_btn_style"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:contentDescription="Back"
                android:focusable="true"
                android:padding="9dp"
                tools:ignore="HardcodedText" />

            <TextView
                style="@style/TextColor_v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="@string/dark_mode"
                android:textSize="26sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnLight"
            style="@style/bg_theme_option_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <TextView
                style="@style/TextColor_v1_clickable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/font_v3"
                android:gravity="center_vertical"
                android:text="@string/light_mode"
                android:textSize="26sp"
                android:textStyle="bold" />


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:src="@drawable/sun_v1"
                app:shapeAppearanceOverlay="@style/roundedImageViewPost" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnDark"
            style="@style/bg_theme_option_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <TextView
                style="@style/TextColor_v1_clickable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/font_v3"
                android:gravity="center_vertical"
                android:text="@string/dark_mode"
                android:textSize="26sp"
                android:textStyle="bold" />


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:src="@drawable/moon_v1"
                app:shapeAppearanceOverlay="@style/roundedImageViewPost" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnSystem"
            style="@style/bg_theme_option_selector"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">


            <TextView
                style="@style/TextColor_v1_clickable"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:fontFamily="@font/font_v3"
                android:gravity="center_vertical"
                android:text="@string/system_settings"
                android:textSize="26sp"
                android:textStyle="bold" />


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:clickable="true"
                android:src="@drawable/solar_system_v1"
                app:shapeAppearanceOverlay="@style/roundedImageViewPost" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>