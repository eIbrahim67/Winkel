<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".about.AboutFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnBack"
                style="@style/back_arrow_background_btn"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:contentDescription="Back"
                android:focusable="true"
                android:minHeight="60dp"
                android:padding="9dp"
                tools:ignore="HardcodedText" />

            <TextView
                style="@style/TextColor_v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:text="@string/about"
                android:textSize="26sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

        </LinearLayout>

        <LinearLayout
            style="@style/rounded_white_v2_black_none_gray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal"
            android:paddingStart="20dp"
            android:paddingTop="10dp"
            android:paddingEnd="20dp"
            android:paddingBottom="10dp">

            <TextView
                style="@style/TextColor_v1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:fontFamily="@font/font_v5"
                android:text="@string/about_our_e_shopping_app"
                android:textSize="22sp"
                android:textStyle="bold" />


            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/about_us_v1"
                app:shapeAppearanceOverlay="@style/roundedImageViewPost" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <View
                style="@style/linesColors"
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical" />

            <View
                style="@style/linesColors"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp" />

            <TextView
                style="@style/TextColor_v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/font_v3"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:text="@string/about_winkel"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <View
                style="@style/linesColors"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp" />

            <View
                style="@style/linesColors"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>


        <TextView
            style="@style/TextColor_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/font_v5"
            android:text="@string/welcome_to_winkel_your_ultimate_destination_for_convenient_and_secure_online_shopping_at_winkel_we_re_dedicated_to_providing_you_with_a_seamless_shopping_experience_offering_a_wide_range_of_products_from_trusted_vendors_here_s_what_you_need_to_know_about_us"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <View
                style="@style/linesColors"
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical" />

            <View
                style="@style/linesColors"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp" />

            <TextView
                style="@style/TextColor_v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/font_v3"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:text="@string/our_mission"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <View
                style="@style/linesColors"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp" />

            <View
                style="@style/linesColors"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <TextView
            style="@style/TextColor_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/font_v5"
            android:text="@string/winkel_is_on_a_mission_to_revolutionize_the_way_you_shop_online_we_aim_to_create_a_platform_that_connects_customers_with_high_quality_products_and_reliable_vendors_ensuring_satisfaction_with_every_purchase"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <View
                style="@style/linesColors"
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical" />

            <View
                style="@style/linesColors"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp" />

            <TextView
                style="@style/TextColor_v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/font_v3"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:text="@string/our_vision"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <View
                style="@style/linesColors"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp" />

            <View
                style="@style/linesColors"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <TextView
            style="@style/TextColor_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/font_v5"
            android:text="@string/we_envision_a_future_where_shopping_is_not_just_a_transaction_but_an_experience_through_innovative_technology_and_customer_centric_features_winkel_strives_to_become_your_go_to_destination_for_all_your_shopping_needs"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <View
                style="@style/linesColors"
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical" />

            <View
                style="@style/linesColors"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp" />

            <TextView
                style="@style/TextColor_v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/font_v3"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:text="@string/our_commitment"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <View
                style="@style/linesColors"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp" />

            <View
                style="@style/linesColors"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <TextView
            style="@style/TextColor_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/font_v5"
            android:text="@string/at_winkel_we_prioritize_transparency_security_and_customer_satisfaction_we_work_tirelessly_to_ensure_that_every_interaction_with_our_platform_is_safe_convenient_and_enjoyable_your_trust_is_our_top_priority_and_we_re_committed_to_earning_it_every_step_of_the_way"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:orientation="horizontal">

            <View
                style="@style/linesColors"
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical" />

            <View
                style="@style/linesColors"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="5dp" />

            <TextView
                style="@style/TextColor_v1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/font_v3"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:text="@string/get_in_touch"
                android:textSize="22sp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

            <View
                style="@style/linesColors"
                android:layout_width="3dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="5dp" />

            <View
                style="@style/linesColors"
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>

        <TextView
            style="@style/TextColor_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="20dp"
            android:fontFamily="@font/font_v5"
            android:text="@string/have_questions_suggestions_or_feedback_we_d_love_to_hear_from_you_feel_free_to_reach_out_to_our_customer_support_team_available_24_7_to_assist_you_with_any_inquiries_you_may_have"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap" />

        <TextView
            style="@style/TextColor_v2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:fontFamily="@font/font_v1"
            android:gravity="center_horizontal"
            android:text="@string/thank_you_for_choosing_winkel__happy_shopping"
            android:textSize="18sp"
            tools:ignore="RelativeOverlap" />

    </LinearLayout>

</ScrollView>