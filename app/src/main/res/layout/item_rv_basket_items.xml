<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:orientation="horizontal"
    android:clickable="true"
    android:focusable="true"
    android:padding="3dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/itemImgCheck"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/items_background_light"
        android:layout_weight="1.5"
        android:scaleType="centerCrop"
        android:layout_marginEnd="5dp"
        android:contentDescription="TODO"
        tools:ignore="HardcodedText"
        android:adjustViewBounds="true"
        app:shapeAppearanceOverlay="@style/roundedImageViewPost"
        android:clickable="true"
        android:focusable="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="5dp">

        <TextView
            android:id="@+id/itemNameCheck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loose Fit Half-zip Fleece Shirt"
            android:fontFamily="@font/works_ans_v1"
            android:textStyle="bold"
            android:textSize="18sp"
            style="@style/TextColor_v1"
            android:layout_marginEnd="40dp"
            tools:ignore="InefficientWeight" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/itemMuchCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Total price:"
                android:layout_marginEnd="10dp"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                style="@style/TextColor_v2"
                android:textStyle="bold"
                android:gravity="center"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/itemPriceCheck"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$69.99"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                style="@style/TextColor_v1"
                android:textStyle="bold"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemDeleteCheck"
            android:layout_width="40dp"
            android:layout_height="40dp"
            style="@style/trash_background_btn"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contentDescription="TODO" />

    </RelativeLayout>

</LinearLayout>
