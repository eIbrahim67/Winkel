<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".secondPages.SettingsActivity"
    style="@style/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="40dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <ImageView
                android:id="@+id/btnBackSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                style="@style/back_arrow_background_btn"
                android:padding="9dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Back"
                tools:ignore="HardcodedText" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                style="@style/TextColor_v1"
                android:text="@string/settings"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:textStyle="bold"
                tools:ignore="RelativeOverlap" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            style="@style/circle_white_v2_black_none_gray"
            android:paddingTop="7dp"
            android:paddingBottom="7dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:layout_marginStart="20dp">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                style="@style/search_icon"
                android:layout_gravity="center_vertical"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:layout_marginStart="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/search"
                android:gravity="center_vertical"
                android:textColor="@color/blue_v3"
                android:textSize="16sp"
                android:paddingEnd="10dp"
                android:paddingStart="0dp"
                android:background="@android:color/transparent"
                android:autofillHints="" />

        </LinearLayout>


        <TextView
            style="@style/TextColor_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:text="@string/personalization"
            android:textSize="24sp"
            android:fontFamily="@font/font_v3"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            style="@style/rounded_white_v2_black_none_gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:focusable="true"
                style="@style/rounded_white_v2_black_none_gray">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    style="@style/moon_icon"
                    android:layout_marginStart="10dp"/>

                <TextView
                    style="@style/TextColor_v1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/dark_mode"
                    android:textSize="18sp"
                    android:fontFamily="@font/font_v3"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    style="@style/arrow_right_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:focusable="true"
                style="@style/rounded_white_v2_black_none_gray">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    style="@style/language_icon"
                    android:layout_marginStart="10dp"/>

                <TextView
                    style="@style/TextColor_v1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/language"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/font_v3"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    style="@style/arrow_right_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:focusable="true"
                style="@style/rounded_white_v2_black_none_gray">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    style="@style/security_icon"
                    android:layout_marginStart="10dp"/>

                <TextView
                    style="@style/TextColor_v1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/security"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/font_v3"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    style="@style/arrow_right_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>





        </LinearLayout>


        <TextView
            style="@style/TextColor_v1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/font_v3"
            android:layout_marginTop="30dp"
            android:text="@string/notifications_activity"
            android:textSize="24sp"
            android:textStyle="bold"
            tools:ignore="RelativeOverlap" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="10dp"
            style="@style/rounded_white_v2_black_none_gray">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:focusable="true"
                style="@style/rounded_white_v2_black_none_gray">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    style="@style/notification_icon"
                    android:layout_marginStart="10dp"/>

                <TextView
                    style="@style/TextColor_v1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notifications"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/font_v3"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    style="@style/arrow_right_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:focusable="true"
                style="@style/rounded_white_v2_black_none_gray">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    style="@style/sound_icon"
                    android:layout_marginStart="10dp"
                    android:contentDescription="@string/sound" />

                <TextView
                    style="@style/TextColor_v1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sound"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/font_v3"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    style="@style/arrow_right_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                style="@style/line"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:clickable="true"
                android:focusable="true"
                style="@style/rounded_white_v2_black_none_gray">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    style="@style/calendar_icon"
                    android:layout_marginStart="10dp"/>

                <TextView
                    style="@style/TextColor_v1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/events"
                    android:textSize="18sp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/font_v3"
                    tools:ignore="RelativeOverlap" />

                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

                <ImageView
                    style="@style/arrow_right_icon"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="10dp"/>

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>

</ScrollView>