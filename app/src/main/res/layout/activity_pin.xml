<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".secondActivity.PinActivity">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        style="@style/back_arrow_background_btn"
        android:padding="7dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/fingerprint_icon_white"
        android:padding="17dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/background_rounded_blue_v2"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <View
            android:id="@+id/pin_p1"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/background_rounded_gray_v10"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <View
            android:id="@+id/pin_p2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/background_rounded_gray_v10"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <View
            android:id="@+id/pin_p3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/background_rounded_gray_v10"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <View
            android:id="@+id/pin_p4"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/background_rounded_gray_v10"
            android:layout_gravity="center_horizontal"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="60dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <Button
                android:id="@+id/btn_pin_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1"
                android:textStyle="bold"
                android:fontFamily="@font/works_ans_v1"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                style="@style/rounded_outline_solid_white_black"/>

            <Button
                android:id="@+id/btn_pin_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2"
                android:textStyle="bold"
                android:fontFamily="@font/works_ans_v1"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                style="@style/rounded_outline_solid_white_black"/>

            <Button
                android:id="@+id/btn_pin_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:textStyle="bold"
                android:fontFamily="@font/works_ans_v1"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                style="@style/rounded_outline_solid_white_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <Button
                android:id="@+id/btn_pin_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4"
                android:textStyle="bold"
                android:fontFamily="@font/works_ans_v1"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                style="@style/rounded_outline_solid_white_black"/>

            <Button
                android:id="@+id/btn_pin_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:textStyle="bold"
                android:fontFamily="@font/works_ans_v1"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                style="@style/rounded_outline_solid_white_black"/>

            <Button
                android:id="@+id/btn_pin_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="6"
                android:textStyle="bold"
                android:fontFamily="@font/works_ans_v1"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                style="@style/rounded_outline_solid_white_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <Button
                android:id="@+id/btn_pin_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="7"
                android:textStyle="bold"
                android:fontFamily="@font/works_ans_v1"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                style="@style/rounded_outline_solid_white_black"/>

            <Button
                android:id="@+id/btn_pin_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="8"
                android:textStyle="bold"
                android:fontFamily="@font/works_ans_v1"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                style="@style/rounded_outline_solid_white_black"/>

            <Button
                android:id="@+id/btn_pin_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="9"
                android:textStyle="bold"
                android:fontFamily="@font/works_ans_v1"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                style="@style/rounded_outline_solid_white_black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:fontFamily="@font/works_ans_v1"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:visibility="invisible"
                android:clickable="false"
                android:focusable="false"/>

            <Button
                android:id="@+id/btn_pin_0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:textStyle="bold"
                android:fontFamily="@font/works_ans_v1"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                style="@style/rounded_outline_solid_white_black"/>

            <RelativeLayout
                android:id="@+id/btn_pin_delete"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textStyle="bold"
                android:fontFamily="@font/works_ans_v1"
                android:textSize="20sp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                style="@style/rounded_outline_solid_white_black">
                
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/remove_icon"
                    android:padding="12dp"/>
                
            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>