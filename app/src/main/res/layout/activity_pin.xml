<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PinFragment"
    style="@style/background">

    <ImageView
        android:id="@+id/btn_back_pin"
        android:layout_width="40dp"
        android:layout_height="40dp"
        style="@style/back_arrow_background_btn"
        android:padding="7dp"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enter_your_current_pin"
        android:textSize="23sp"
        style="@style/TextColor_v1"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal"/>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/fingerprint_icon_white"
        android:padding="17dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/rounded_blue_v2_none_gray_v4"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/pin_p1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:padding="15dp"
            android:background="@drawable/rounded_gray_v1_gray_v12_none"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/pin_p2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_gray_v1_gray_v12_none"
            android:padding="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/pin_p3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_gray_v1_gray_v12_none"
            android:padding="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

        <ImageView
            android:id="@+id/pin_p4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rounded_gray_v1_gray_v12_none"
            android:padding="15dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <Button
                    android:id="@+id/btn_pin_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_v1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="20dp"
                    style="@style/rounded_outline_solid_white_black"/>

                <Button
                    android:id="@+id/btn_pin_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_v1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="20dp"
                    style="@style/rounded_outline_solid_white_black"/>

                <Button
                    android:id="@+id/btn_pin_3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_v1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="20dp"
                    style="@style/rounded_outline_solid_white_black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <Button
                    android:id="@+id/btn_pin_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_v1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    style="@style/rounded_outline_solid_white_black"/>

                <Button
                    android:id="@+id/btn_pin_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_v1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="20dp"
                    style="@style/rounded_outline_solid_white_black"/>

                <Button
                    android:id="@+id/btn_pin_6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="6"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_v1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="20dp"
                    style="@style/rounded_outline_solid_white_black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <Button
                    android:id="@+id/btn_pin_7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="7"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_v1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="20dp"
                    style="@style/rounded_outline_solid_white_black"/>

                <Button
                    android:id="@+id/btn_pin_8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="8"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_v1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="20dp"
                    style="@style/rounded_outline_solid_white_black"/>

                <Button
                    android:id="@+id/btn_pin_9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="9"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_v1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="20dp"
                    style="@style/rounded_outline_solid_white_black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <Button
                    android:id="@+id/btn_pin_00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="00"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_v1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:paddingBottom="20dp"
                    style="@style/rounded_outline_solid_white_black"/>

                <Button
                    android:id="@+id/btn_pin_0"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_v1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="20dp"
                    android:clickable="true"
                    android:focusable="true"
                    style="@style/rounded_outline_solid_white_black"/>

                <RelativeLayout
                    android:id="@+id/btn_pin_delete"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textStyle="bold"
                    android:fontFamily="@font/font_v1"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp"
                    style="@style/rounded_outline_solid_white_black"
                    android:elevation="3dp"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        style="@style/remove_icon"
                        android:padding="20dp"/>

                </RelativeLayout>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/forget_your_pin"
                android:textSize="15sp"
                android:clickable="true"
                android:focusable="true"
                style="@style/TextColor_v2"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>