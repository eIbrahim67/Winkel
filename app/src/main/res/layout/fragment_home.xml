<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_home"
    style="@style/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="50dp"
                        android:orientation="horizontal"
                        style="@style/circle_white_v2_black_none_gray"
                        android:layout_weight="1"
                        android:paddingTop="7dp"
                        android:paddingBottom="7dp"
                        android:layout_marginEnd="5dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:id="@+id/search_btn">

                        <ImageView
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            style="@style/search_icon"
                            android:layout_gravity="center_vertical"
                            android:background="@android:color/transparent"
                            android:padding="8dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/search"
                            android:gravity="center_vertical"
                            android:textColor="@color/blue_v3"
                            android:textSize="16sp"
                            android:paddingEnd="10dp"
                            android:paddingStart="0dp"
                            android:background="@android:color/transparent"
                            android:autofillHints="" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnFunctions"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        style="@style/options_background_btn"
                        android:padding="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="5dp"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/main_home_design"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginStart="20dp"
                        android:layout_marginEnd="20dp"
                        style="@style/rounded_white_v2_black_none_gray"
                        android:paddingBottom="20dp"
                        android:paddingTop="20dp"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:clickable="true"
                        android:focusable="true">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/slogan_v1"
                            style="@style/TextColor_v1"
                            android:textSize="26sp"
                            android:fontFamily="@font/font_v3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/_50"
                            style="@style/TextColor_v1"
                            android:layout_alignParentBottom="true"
                            android:textSize="38sp"
                            android:layout_marginStart="20dp"
                            android:fontFamily="@font/font_v3"/>

                        <com.google.android.material.imageview.ShapeableImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_gravity="center_horizontal"
                            app:shapeAppearanceOverlay="@style/roundedImageViewPost"
                            android:src="@drawable/discount_v2"
                            android:layout_alignParentEnd="true"/>

                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/main_categories"
                        style="@style/TextColor_v1"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textSize="22sp"
                        android:fontFamily="@font/font_v3"/>

                    <HorizontalScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:scrollbars="none">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:paddingStart="20dp"
                            android:paddingEnd="20dp">

                            <LinearLayout
                                android:id="@+id/btnItemsMens"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="15dp"
                                android:clickable="true"
                                android:focusable="true">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_horizontal"
                                    app:shapeAppearanceOverlay="@style/roundedImageViewPost"
                                    android:src="@drawable/man_v1"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/men"
                                    style="@style/TextColor_v1"
                                    android:textSize="18sp"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/font_v3"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btnItemsWomen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="15dp"
                                android:clickable="true"
                                android:focusable="true">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_horizontal"
                                    app:shapeAppearanceOverlay="@style/roundedImageViewPost"
                                    android:src="@drawable/woman_v1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/women"
                                    style="@style/TextColor_v1"
                                    android:textSize="18sp"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/font_v3"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btnItemsBoys"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="15dp"
                                android:clickable="true"
                                android:focusable="true">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_horizontal"
                                    app:shapeAppearanceOverlay="@style/roundedImageViewPost"
                                    android:src="@drawable/boy_v1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/boys"
                                    style="@style/TextColor_v1"
                                    android:textSize="18sp"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/font_v3"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btnItemsGirls"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="15dp"
                                android:clickable="true"
                                android:focusable="true">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_horizontal"
                                    app:shapeAppearanceOverlay="@style/roundedImageViewPost"
                                    android:src="@drawable/girl_v1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/girls"
                                    style="@style/TextColor_v1"
                                    android:textSize="18sp"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/font_v3"/>

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/btnItemsBabies"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_marginEnd="15dp"
                                android:clickable="true"
                                android:focusable="true">

                                <com.google.android.material.imageview.ShapeableImageView
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:layout_gravity="center_horizontal"
                                    app:shapeAppearanceOverlay="@style/roundedImageViewPost"
                                    android:src="@drawable/baby_v1" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/babies"
                                    style="@style/TextColor_v1"
                                    android:textSize="18sp"
                                    android:layout_gravity="center_horizontal"
                                    android:fontFamily="@font/font_v3"/>

                            </LinearLayout>

                        </LinearLayout>

                    </HorizontalScrollView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.tans.horizontalnestedscrollview.HorizontalNestedScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerview_filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"/>

                        </RelativeLayout>

                    </com.tans.horizontalnestedscrollview.HorizontalNestedScrollView>

                    <RelativeLayout
                        android:id="@+id/tops_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="5dp">

                        <ImageView
                            android:id="@+id/tops_btn"
                            android:layout_width="35dp"
                            android:layout_height="35dp"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="20dp"
                            android:padding="2dp"
                            android:layout_centerVertical="true"
                            style="@style/more_background_btn"
                            android:clickable="true"
                            android:focusable="true"/>

                        <TextView
                            android:id="@+id/tops_titles"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/new_releases"
                            style="@style/TextColor_v1"
                            android:layout_marginStart="20dp"
                            android:layout_centerVertical="true"
                            android:textSize="22sp"
                            android:fontFamily="@font/font_v3"/>

                    </RelativeLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"/>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/search_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            style="@style/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    style="@style/circle_white_v2_black_none_gray"
                    android:layout_weight="1"
                    android:paddingTop="7dp"
                    android:paddingBottom="7dp"
                    android:layout_marginEnd="5dp"
                    android:clickable="true">

                    <ImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        style="@style/search_icon"
                        android:layout_gravity="center_vertical"
                        android:background="@android:color/transparent"
                        android:padding="8dp"
                        android:layout_marginStart="10dp"/>

                    <EditText
                        android:id="@+id/search_text"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:hint="@string/search"
                        android:gravity="center_vertical"
                        android:inputType="text"
                        android:layout_marginEnd="10dp"
                        android:textColor="@color/blue_v3"
                        android:textSize="16sp"
                        android:background="@android:color/transparent"
                        android:autofillHints="" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/btnCloseSearch"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    style="@style/close_background_btn"
                    android:padding="12dp"
                    android:clickable="true"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="5dp"/>

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>