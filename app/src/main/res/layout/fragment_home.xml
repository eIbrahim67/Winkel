<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_home"
    style="@style/background">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        style="@style/search_background_btn"
                        android:layout_weight="1"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:layout_marginEnd="10dp"
                        android:clickable="true"
                        android:id="@+id/search_btn">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            style="@style/search_background_btn"
                            android:background="@android:color/transparent"
                            android:padding="10dp"
                            android:layout_marginStart="10dp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="@string/search"
                            android:gravity="center_vertical"
                            android:textColor="@color/black_v1"
                            android:textSize="16sp"
                            android:background="@android:color/transparent"
                            android:autofillHints="" />

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btnFunctions"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        style="@style/options_background_btn"
                        android:padding="12dp"
                        android:clickable="true"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="10dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <com.tans.horizontalnestedscrollview.HorizontalNestedScrollView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerview_filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="20dp"/>

                        </RelativeLayout>

                    </com.tans.horizontalnestedscrollview.HorizontalNestedScrollView>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerview_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginEnd="10dp"/>

                    <ScrollView
                        android:id="@+id/ScrollView_of_ItemsTypes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <RelativeLayout
                                android:id="@+id/btnItemsMens"
                                style="@style/sharp_gray_v4"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/men"
                                    android:textSize="22sp"
                                    android:fontFamily="@font/works_ans_v1"
                                    android:textStyle="bold"
                                    android:layout_marginStart="20dp"
                                    style="@style/TextColor_v1"/>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    style="@style/arrow_right_icon"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerviewItemsMens"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"/>

                                <include
                                    android:id="@+id/recyclerviewItemsMens_skeleton"
                                    layout="@layout/item_skeleton_home" />

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/gray_v8"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"/>

                            <RelativeLayout
                                android:id="@+id/btnItemsWomen"
                                style="@style/sharp_gray_v4"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/women"
                                    android:textSize="22dp"
                                    android:fontFamily="@font/works_ans_v1"
                                    android:textStyle="bold"
                                    android:layout_marginStart="20dp"
                                    style="@style/TextColor_v1"/>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    style="@style/arrow_right_icon"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerviewItemsWomen"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"/>

                                <include
                                    android:id="@+id/recyclerviewItemsWomen_skeleton"
                                    layout="@layout/item_skeleton_home"/>

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/gray_v8"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"/>

                            <RelativeLayout
                                android:id="@+id/btnItemsKids"
                                style="@style/sharp_gray_v4"
                                android:clickable="true"
                                android:focusable="true"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/kids"
                                    android:textSize="22sp"
                                    android:fontFamily="@font/works_ans_v1"
                                    android:textStyle="bold"
                                    android:layout_marginStart="20dp"
                                    style="@style/TextColor_v1"/>

                                <ImageView
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    style="@style/arrow_right_icon"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_marginEnd="20dp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/recyclerviewItemsKids"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginEnd="10dp"/>

                                <include
                                    android:id="@+id/recyclerviewItemsKids_skeleton"
                                    layout="@layout/item_skeleton_home"/>

                            </RelativeLayout>

                            <View
                                android:layout_width="match_parent"
                                android:layout_height="2dp"
                                android:background="@color/gray_v8"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="5dp"/>

                            <TextView
                                android:id="@+id/btnItemsOffers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/offers"
                                android:textSize="22sp"
                                android:fontFamily="@font/works_ans_v1"
                                android:textStyle="bold"
                                android:clickable="true"
                                android:focusable="true"
                                android:gravity="center"
                                style="@style/TextColor_v1"/>

                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerviewItemsOffers"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginEnd="10dp"/>

                            <include
                                android:id="@+id/recyclerviewItemsOffers_skeleton"
                                layout="@layout/item_skeleton_home"/>

                        </LinearLayout>

                    </ScrollView>

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:id="@+id/search_page"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone"
            style="@style/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                style="@style/search_background_btn"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:clickable="true">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    style="@style/search_background_btn"
                    android:background="@android:color/transparent"
                    android:padding="10dp"
                    android:layout_marginStart="10dp"/>

                <EditText
                    android:id="@+id/search_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="Search...."
                    android:gravity="center_vertical"
                    android:inputType="text"
                    android:textColor="@color/black_v1"
                    android:textSize="16sp"
                    android:background="@android:color/transparent"
                    
                    android:autofillHints="" />

            </LinearLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>